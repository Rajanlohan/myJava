package revisionAll;

public class PerfectNumber {

	public static boolean perfect(int n)
	{
		int sum=0;
		
		for(int i=1; i<=n/2; i++)
		{
			if(n%i==0)
				sum=sum+i;
		}
		if(n==sum)
		return true;
		
	return false;
	}
	
	
	
	public static void main(String[] args) {
     int n=6;
		boolean b= perfect(n);
		if(b)
			System.out.println("No. is perfect");
		else
			System.out.println("Its not perfect");
		

	}

}
