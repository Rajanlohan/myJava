package revisionAll;

public class PerfectNumber {

	public static int perfect(int n)
	{
		int sum=0;
		
		for(int i=1; i<=n/2; i++)
		{
			if(n%i==0)
				sum=sum+i;
		}
		if(n==sum)
				System.out.println("No. is perfect");
			else
				System.out.println("Its not perfect");
		
		
	return sum;
	}
	
	
	
	public static void main(String[] args) {
     
	perfect(5 );	

	}

}
